{
  "name": "book-video-link",
  "version": "0.0.1",
  "repository": "git@github.com:ministryofjustice/hmpps-book-video-link.git",
  "license": "MIT",
  "private": false,
  "engines": {
    "npm": ">=6",
    "node": ">=12.*"
  },
  "dependencies": {
    "@ministryofjustice/frontend": "^0.0.17-alpha",
    "agentkeepalive": "^4.0.2",
    "applicationinsights": "^1.4.0",
    "applicationinsights-native-metrics": "^0.0.5",
    "axios": "0.18.1",
    "body-parser": "^1.18.3",
    "bunyan": "^1.8.12",
    "bunyan-middleware": "^0.8.0",
    "connect-flash": "^0.1.1",
    "connect-redis": "^4.0.3",
    "cookie-session": "^2.0.0-beta.3",
    "csurf": "^1.11.0",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-form-data": "^2.0.7",
    "express-session": "^1.16.2",
    "govuk-frontend": "^3.6.0",
    "helmet": "^3.12.1",
    "hsts": "^2.1.0",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^2.2.0",
    "moment": "^2.24.0",
    "moment-business-days": "^1.1.3",
    "nocache": "^2.1.0",
    "nock": "^11.9.0",
    "notifications-node-client": "^4.7.0",
    "nunjucks": "^3.2.0",
    "passport": "^0.4.0",
    "passport-oauth2": "^1.4.0",
    "qs": "^6.5.2",
    "redis": "^2.8.0",
    "sass": "^1.26.12",
    "superagent": "^5.1.0",
    "universal-analytics": "^0.4.20"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "audit-ci": "^3.0.0",
    "axios-mock-adapter": "^1.15.0",
    "cypress": "^5.5.0",
    "cypress-file-upload": "^4.0.7",
    "cypress-multi-reporters": "^1.4.0",
    "dotenv-expand": "^4.2.0",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^3.0.5",
    "jest": "^24.8.0",
    "jsdom": "^13.0.0",
    "lint-staged": "^8.2.1",
    "mkdirp": "^0.5.1",
    "mocha-junit-reporter": "^2.0.0",
    "node-sass": "^4.9.0",
    "nodemon": "^2.0.4",
    "nyc": "15.1.0",
    "prettier": "1.14.3",
    "set-cookie-parser": "^2.2.1",
    "supertest": "^3.1.0",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "clean": " rm -Rf build .nyc_output coverage test-results",
    "start": "node backend/index.js",
    "start:cov": "cp -R static build && npm run compile-sass && export $(cat feature.env) && nyc node backend/index.js",
    "start:dev": "nodemon --watch backend --watch views backend/index.js",
    "start-feature": "cp -R static build && npm run compile-sass && export $(cat feature.env) && node backend/index.js",
    "start-feature:dev": "cp -R static build && npm run compile-sass && export $(cat feature.env) && nodemon --watch backend --watch views backend/index.js",
    "build": "cp -R static build && npm run compile-sass",
    "test": "jest",
    "test-watch": "jest --watch",
    "record-build-info": "node scripts/record-build-info",
    "lint": "eslint backend",
    "verify": "npm run lint && npm test",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run",
    "int-test-no-artefacts": "cypress run --config video=false,screenshotOnRunFailure=false",
    "int-test-ui": "cypress open",
    "compile-sass": "sass --load-path=. ./sass:./build/stylesheets --style compressed",
    "compile-sass-watch": "npm run compile-sass && sass --load-path=. ./sass:./build/stylesheets --watch --style compressed"
  },
  "nyc": {
    "all": true,
    "include": [
      "backend/**/*.js"
    ],
    "reporter": [
      "html"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "backend/**/*.{js,mjs}"
    ],
    "globalSetup": "<rootDir>/config/jest/globalSetup.js",
    "setupFilesAfterEnv": [
      "<rootDir>/config/jest/setupTests.js"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/integration-tests/"
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "mjs"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,json,css}": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "package.json"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "seeds/*",
      "node_modules/*",
      "integration-tests/*"
    ],
    "delay": 2500,
    "ext": "js,njk"
  }
}
