{
  "name": "book-video-link",
  "version": "0.0.1",
  "repository": "git@github.com:ministryofjustice/hmpps-book-video-link.git",
  "license": "MIT",
  "private": false,
  "engines": {
    "npm": ">=6",
    "node": ">=12.*"
  },
  "dependencies": {
    "@ministryofjustice/frontend": "^0.0.21",
    "agentkeepalive": "^4.1.3",
    "applicationinsights": "^1.8.7",
    "applicationinsights-native-metrics": "^0.0.5",
    "axios": "0.21.0",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.14",
    "bunyan-format": "^0.2.1",
    "bunyan-request-logger": "^2.1.0",
    "connect-flash": "^0.1.1",
    "connect-redis": "^5.0.0",
    "cookie-session": "^2.0.0-beta.3",
    "csurf": "^1.11.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-form-data": "^2.0.14",
    "express-session": "^1.17.1",
    "govuk-frontend": "^3.9.1",
    "helmet": "^4.2.0",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.0.0",
    "moment": "^2.29.1",
    "moment-business-days": "^1.2.0",
    "nocache": "^2.1.0",
    "nock": "^13.0.4",
    "notifications-node-client": "^5.0.0",
    "nunjucks": "^3.2.2",
    "passport": "^0.4.1",
    "passport-oauth2": "^1.5.0",
    "qs": "^6.9.4",
    "redis": "^3.0.2",
    "sass": "^1.28.0",
    "superagent": "^6.1.0",
    "universal-analytics": "^0.4.23"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "audit-ci": "^3.1.1",
    "cypress": "^5.5.0",
    "cypress-file-upload": "^4.1.1",
    "cypress-multi-reporters": "^1.4.0",
    "dotenv-expand": "^5.1.0",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.2",
    "jsdom": "^16.4.0",
    "lint-staged": "^10.5.1",
    "mocha-junit-reporter": "^2.0.0",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.6",
    "nyc": "15.1.0",
    "prettier": "2.1.2",
    "set-cookie-parser": "^2.4.6",
    "supertest": "^6.0.0",
    "typescript": "^4.0.5"
  },
  "scripts": {
    "clean": " rm -Rf build .nyc_output coverage test-results",
    "start": "node backend/index.js",
    "start:cov": "cp -R static build && npm run compile-sass && export $(cat feature.env) && nyc node backend/index.js",
    "start:dev": "nodemon --watch backend --watch views backend/index.js | bunyan -o short",
    "start-feature": "cp -R static build && npm run compile-sass && export $(cat feature.env) && node backend/index.js",
    "start-feature:dev": "cp -R static build && npm run compile-sass && export $(cat feature.env) && nodemon --watch backend --watch views backend/index.js",
    "build": "cp -R static build && npm run compile-sass",
    "test": "jest",
    "test-watch": "jest --watch",
    "record-build-info": "node scripts/record-build-info",
    "lint": "eslint backend",
    "typecheck": "tsc",
    "verify": "npm run lint && npm test",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run",
    "int-test-no-artefacts": "cypress run --config video=false,screenshotOnRunFailure=false",
    "int-test-ui": "cypress open",
    "compile-sass": "sass --load-path=. ./sass:./build/stylesheets --style compressed",
    "compile-sass-watch": "npm run compile-sass && sass --load-path=. ./sass:./build/stylesheets --watch --style compressed"
  },
  "nyc": {
    "all": true,
    "include": [
      "backend/**/*.js"
    ],
    "reporter": [
      "html"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "backend/**/*.{js,mjs}"
    ],
    "globalSetup": "<rootDir>/config/jest/globalSetup.js",
    "setupFilesAfterEnv": [
      "<rootDir>/config/jest/setupTests.js"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/integration-tests/"
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "mjs"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && && tsc && npm test"
    }
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json}": [
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "seeds/*",
      "node_modules/*",
      "integration-tests/*"
    ],
    "delay": 2500,
    "ext": "js,njk"
  }
}
